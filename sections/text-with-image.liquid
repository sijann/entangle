{% schema %}
{
  "name": "Image with Text Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Section Image"
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "Image Shape",
      "options": [
        {
          "label": "Square",
          "value": "square"
        },
        {
          "label": "Portrait",
          "value": "portrait"
        },
        {
          "label": "Arch",
          "value": "arch"
        },
        {
          "label": "Rounded",
          "value": "rounded"
        },
        {
          "label": "Rounded Wave",
          "value": "rounded_wave"
        }
      ]
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Imagee with text"
    }
  ]
}
{% endschema %}

{% assign image = section.settings.section_image %}
{% assign image_shape = section.settings.image_shape %}
{% assign image_position = section.settings.image_position %}

<section class="image-with-text-section">
  <div class="container">
    <div class="image-wrapper {% if image_position == 'Right' %}image-right{% else %}image-left{% endif %}">
      <img
        height="1000"
        width="1000"
        src="{{ image | img_url: "master" }}"
        alt="Section Image"
        class="section-image {{ image_shape | handle }}"
      >
    </div>
    <div class="text-wrapper">
      {{ section.blocks[0].settings.text }}
    </div>
  </div>
</section>

<style>
  .image-with-text-section {
    padding: 20px;
    /* Add your styles for the section wrapper here */
  }

  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    /* Add your styles for the container here */
  }

  .image-wrapper {
    flex: 1;
    /* Add your styles for the image wrapper here */
  }

  .image-right {
    text-align: right;
    /* Add your styles for right-aligned image here */
  }

  .image-left {
    text-align: left;
    /* Add your styles for left-aligned image here */
  }

  .section-image {
    max-width: 100%;
    height: auto;
    border-radius: 0;
    /* Add your styles for the section image here */
  }

  .section-image.square {
    border-radius: 0;
  }

  .section-image.portrait {
    border-radius: 50%;
  }

  .section-image.arch {
    border-radius: 50% / 100% 100% 0 0;
  }

  .section-image.rounded {
    border-radius: 10px;
  }

  .section-image.rounded-wave {
    border-radius: 50%/70% 70% 50% 50%;
  }

  .text-wrapper {
    flex: 1;
    /* Add your styles for the text wrapper here */
  }

  /* Add your additional styles as needed */
</style>
