{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "range",
      "label": "Number of Blocks",
      "id": "num_blocks",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "label": "Padding (in pixels)",
      "id": "padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 10
    },
    {
      "type": "range",
      "label": "Time Between Slides (in seconds)",
      "id": "slide_duration",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "label": "Font Size (in pixels)",
      "id": "font_size",
      "min": 12,
      "max": 24,
      "step": 2,
      "default": 16
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "name": "Announcement Bar",
      "type": "announcement",
      "settings": [
        {
          "type": "text",
          "id": "announcement_text",
          "label": "Text",
          "default": "Announcement Text"
        }
      ]
    }
  ]
}
{% endschema %}

{% assign padding = section.settings.padding %}
{% assign slide_duration = section.settings.slide_duration | plus: 0 | times: 1000 %}
{% assign font_size = section.settings.font_size %}

<style>
  .en-announcement-bar {
    padding-left: {{ padding }}px;
    padding-right: {{ padding }}px;
    font-size: {{ font_size }}px;
  }
  .announcement-bar--slide{
    width: 100%;
    text-align: center;
  }
</style>

<div
  class="en-announcement-bar color-{{ section.settings.color_scheme }}"
  data-flickity='{ "cellAlign": "center", "contain": true, "groupCells": 1,"pageDots": false, "wrapAround": true, "prevNextButtons": false, "autoPlay": {{ slide_duration }} }'
>
  {% for block in section.blocks %}
    <div class="announcement-bar--slide">
      {{ block.settings.announcement_text }}
    </div>
  {% endfor %}
</div>
