{% schema %}
{
  "name": "Image Overlay Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.2
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text_content",
      "label": "Text Content"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "center-left", "label": "Center Left" },
        { "value": "center", "label": "Center" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Image with text overlayy"
    }
  ]
}
{% endschema %}

{% assign bgImage = section.settings.background_image %}
{% assign overlayColor = section.settings.overlay_color %}
{% assign overlayOpacity = section.settings.overlay_opacity %}
{% assign heading = section.settings.heading %}
{% assign textContent = section.settings.text_content %}
{% assign contentPosition = section.settings.content_position %}
{% assign textColor = section.settings.text_color %}

<section class="en-image-overlay-section">
  <div class="en-image-overlay-container">
    {% if bgImage %}
      <div class="en-image-overlay" style="background-image: url({{ bgImage | img_url: 'master' }});">'</div>
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'en-image-overlay-svg' }}
    {% endif %}
    <div class="en-content-wrapper {{ contentPosition }}">
      <h2 class="lg:en-text-[4rem]" style="color: {{ textColor }}">{{ heading }}</h2>
      <p class="lg:en-text-[2.5rem]" style="color: {{ textColor }}">{{ textContent }}</p>
    </div>
  </div>
</section>

<style>
    .en-image-overlay-section {
      position: relative;
      width: 100%;
    }

    .en-image-overlay-container {
      position: relative;
      width: 100%;
      padding-bottom: 75%;
      {% if bgImage %}
      background-color: {{ overlayColor }};

  {% endif %}
    }

    .en-image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ overlayColor }};
      opacity: {{ overlayOpacity }};
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }
    .en-image-overlay-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: {{ overlayOpacity }};
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    }

    .en-content-wrapper {
      position: absolute;
      text-align: center;
    }

    .en-content-wrapper.top-left { top: 10%; left: 10%; }
    .en-content-wrapper.top-center { top: 10%; left: 50%; transform: translate(-50%, 0); }
    .en-content-wrapper.top-right { top: 10%; right: 10%; }
    .en-content-wrapper.center-left { top: 50%; left: 10%; transform: translate(0, -50%); }
    .en-content-wrapper.center { top: 50%; left: 50%; transform: translate(-50%, -50%); }
    .en-content-wrapper.center-right { top: 50%; right: 10%; transform: translate(0, -50%); }
    .en-content-wrapper.bottom-left { bottom: 10%; left: 10%; }
    .en-content-wrapper.bottom-center { bottom: 10%; left: 50%; transform: translate(-50%, 0); }
    .en-content-wrapper.bottom-right { bottom: 10%; right: 10%; }

    .en-image-overlay-section h2, .en-image-overlay-section p {
      margin: 0;
      padding: 0;
    }

    @media screen and (max-width: 749px){
      .en-image-overlay-container {
      min-height: 36rem;
    }
    }
</style>
