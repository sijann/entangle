{% schema %}
{
  "name": "Image Slideshow",
  "settings": [],
  "blocks": [
    {
      "type": "image_slider",
      "name": "Image Slider",
      "settings": [
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "Sample Heading"
        },
        {
          "type": "textarea",
          "label": "Text",
          "id": "text",
          "default": "Sample text"
        },
        {
          "type": "url",
          "label": "Button URL",
          "id": "button_url"
        },
        {
          "type": "text",
          "label": "Button Text",
          "id": "button_text",
          "default": "Button"
        },
        {
          "type": "range",
          "label": "Overlay Opacity",
          "id": "overlay_opacity",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "default": 0.5
        },
        {
          "type": "color",
          "label": "Overlay Color",
          "id": "overlay_color",
          "default": "#000000"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow"
    }
  ]
}
{% endschema %}

<style>
  .image-slider {
    position: relative;
    overflow: hidden;
  }

  .image-slider .flickity-prev-next-button {
    display: none;
  }

  .image-slider .flickity-page-dots {
    bottom: 10px;
  }

  .image-slider .slide-item {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
  }

  .image-slider .slide-item img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-slider .slide-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #ffffff;
  }

  .image-slider .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    opacity: 0.5;
  }

  .image-slider .slide-heading {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .image-slider .slide-text {
    font-size: 16px;
    margin-bottom: 20px;
  }

  .image-slider .slide-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #ffffff;
    color: #000000;
    text-decoration: none;
    border-radius: 4px;
  }
</style>

<script>
  var elem = document.querySelector('.image-slider');
  var flkty = new Flickity(elem, {
    cellAlign: "center",
    contain: true,
    groupCells: 1,
    pageDots: false,
    wrapAround: true,
    prevNextButtons: false,
    autoPlay:  {{ section.settings.slide_duration }}
  });
</script>

{% for block in section.blocks %}
  {% if block.type == 'image_slider' %}
    <div class="image-slider">
      {% for slide in block.settings.slides %}
        <div class="slide-item">
          <img src="{{ slide.image | img_url: 'master' }}" height="1000" width="1000" alt="{{ slide.caption }}">
          <div class="slide-content">
            <div
              class="slide-overlay"
              style="opacity: {{ block.settings.overlay_opacity }}; background-color: {{ block.settings.overlay_color }}"
            ></div>
            <h2 class="slide-heading">{{ block.settings.heading }}</h2>
            <p class="slide-text">{{ block.settings.text }}</p>
            <a class="slide-button" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endfor %}
